<odoo>
    <!-- Form View For Wizard -->
    <record id="report_student_attenance_xlsx_wizard_form_view" model="ir.ui.view">
        <field name="name">report.student.attendance.xlsx.wizard.form.view</field>
        <field name="model">oe.report.student.attendance.xlsx.wizard</field>
        <field name="arch" type="xml">
            <form string="Attendance Report">
                <group>
                    <group>
                        <field name="date_from" />
                        <field name="course_id" />
                    </group>
                    <group>
                        <field name="date_to"/>
                        <field name="company_id" />
                    </group>
                </group>
                <footer>
                    <button name="generate_excel_report" string="Generate Report" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    
    <!--  Action  -->
    <record id="action_report_student_attendance_xlsx" model="ir.actions.act_window">
        <field name="name">Loan Details Report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">oe.report.student.attendance.xlsx.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="report_student_attenance_xlsx_wizard_form_view"/>
        <field name="target">new</field>
    </record>
    <!--  Menu  -->
    <menuitem name="Attendance Details"
        parent="menu_student_attendance_reports"
        id="menu_report_loan_details_xlsx"
        action="action_report_student_attendance_xlsx"
        sequence="20"
    />

</odoo>