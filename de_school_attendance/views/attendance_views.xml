<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- tree views -->
    <record id="student_attendance_tree_view" model="ir.ui.view">
        <field name="name">student.attendance.tree.view</field>
        <field name="model">oe.student.attendance</field>
        <field name="arch" type="xml">
            <tree string="Student attendances" editable="bottom" sample="1">
                <field name="student_attendance_mode" column_invisible="1" />
                <field name="roll_no" />
                <field name="student_id" context="{'form_view_ref':'de_school.student_primary_form_view'}"/>
                <field name="date_attendance" />
                 <field name="course_id" />
                <field name="batch_id" />
                <field name="subject_id" groups="de_school_attendance.group_student_attendance_use_period"/>
                <field name="subject_ids" column_invisible="1"/>
                <field name="check_in" groups="de_school_attendance.group_student_attendance_use_time"/>
                <field name="check_out" groups="de_school_attendance.group_student_attendance_use_time"/>
                <field name="attendance_hours" string="Attendance Hours" widget="float_time" groups="de_school_attendance.group_student_attendance_use_time"/>
                 <field name="attendance_sheet_id" optional="hide" />
                <field name="attendance_status" />
            </tree>
        </field>
    </record>
    <!-- kanban view -->
    <record id="student_attendance_kanban_view" model="ir.ui.view">
        <field name="name">student.attendance.kanban.view</field>
        <field name="model">oe.student.attendance</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" sample="1">
                <field name="student_id"/>
                <field name="check_in"/>
                <field name="check_out"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div>
                                <img t-att-src="kanban_image('hr.employee', 'avatar_128', record.student_id.raw_value)" t-att-title="record.student_id.value" t-att-alt="record.student_id.value" class="oe_kanban_avatar o_image_24_cover mr4"/>
                                <span class="o_kanban_record_title">
                                    <strong><t t-esc="record.student_id.value"/></strong>
                                </span>
                            </div>
                            <hr class="mt4 mb8"/>
                            <div class="o_kanban_record_subtitle">
                                <i class="fa fa-calendar" aria-label="Period" role="img" title="Period"></i>
                                <t t-esc="record.check_in.value"/>
                                - <t t-esc="record.check_out.value"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    <!-- form view -->
    <record id="student_attendance_form_view" model="ir.ui.view">
        <field name="name">student.attendance.form.view</field>
        <field name="model">oe.student.attendance</field>
        <field name="arch" type="xml">
            <form string="Student attendances">
                <sheet>
                    <group>
                        <group>
                            <field name="student_id"/>
                            <field name="date_attendance"/>
                            <field name="check_in"/>
                            <field name="check_out"/>
                            <field name="attendance_hours" string="Attendance Hours" widget="float_time" optional="hide"/>
                            <field name="attendance_status"/>
                        </group>
                        <group>
                            <field name="attendance_sheet_id" options="{'no_create': True}"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <!-- Search view -->
    <record id="student_attendance_search_view" model="ir.ui.view">
        <field name="name">student.attendance.search.view</field>
        <field name="model">oe.student.attendance</field>
        <field name="arch" type="xml">
            <search string="Student Attendance Search">
                <field name="student_id"/>
                <!--
                <field name="department_id" operator="child_of"/>
                -->
                <filter string="My Attendances" name="myattendances" domain="[('student_id', '=', uid.partner_id)]" />
                <separator/>
                <filter string="Check In" name="check_in_filter" date="check_in" default_period="last_month"/>
                <filter string="No Check Out" name="nocheckout" domain="[('check_out', '=', False)]" />
                <group expand="0" string="Group By">
                    <filter string="Student" name="student" context="{'group_by': 'student_id'}"/>
                    <filter string="Check In" name="groupby_name" context="{'group_by': 'check_in'}"/>
                    <filter string="Check Out" name="groupby_check_out" context="{'group_by': 'check_out'}"/>
                </group>
            </search>
        </field>
    </record>
    <!-- Action views -->
    <record id="action_student_attendance" model="ir.actions.act_window">
        <field name="name">Attendances</field>
        <field name="res_model">oe.student.attendance</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="context">{"search_default_today":1}</field>
        <field name="view_id" ref="student_attendance_tree_view" />
        <field name="search_view_id" ref="student_attendance_search_view" />
        <field name="help" type="html">
            <p class="o_view_nocontent_empty_folder">
                No attendance records found
            </p><p>
                The attendance records of your students will be displayed here.
            </p>
        </field>
    </record>

    <!-- Menus -->
    <menuitem id="menu_school_attendance_attendance"
        name="Attendances"
        parent="menu_school_attendance_main"
        sequence="20"
        action="action_student_attendance"
    />
   
    />
</odoo>