<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="attendance_register_search" model="ir.ui.view">
        <field name="name">Attendance Register - Search</field>
        <field name="model">oe.attendance.register</field>
        <field name="arch" type="xml">
            <search string="Register Search">
                <field name="name"/>
                <separator/>
                <filter string="Open" name="open_register"
                    domain="[('state', '=', 'progress')]"
                />
                <filter string="Closed" name="close_register"
                    domain="[('state', '=', 'close')]"
                />
                <separator/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                <group expand="0" string="Group By" colspan="16">
                        <filter string="Course" name="course" context="{'group_by':'course_id'}"/>
                        <filter name="stage" string="Stage" context="{'group_by':'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Attendance Register TREE VIEW + MUTI_EDIT -->
    <record id="attendance_register_tree_view" model="ir.ui.view">
        <field name="name">attendance.register.tree.view</field>
        <field name="model">oe.attendance.register</field>
        <field name="arch" type="xml">
            <tree string="Attendance Register" >
                <field name="name"/>
                <field name="school_year_id" options="{'no_create': True}"/>
                <field name="date_start" />
                <field name="date_start" />
                <field name="course_id" />
                <field name="company_id" options="{'no_create': True}" groups="base.group_multi_company"/>
                <field name="state" optional="show" widget="badge" decoration-success="state == 'progress'" decoration-muted="state == 'close' or state == 'cancel'" decoration-info="state == 'draft'"/>
            </tree>
        </field>
    </record>

    <record id="attendance_register_form_view" model="ir.ui.view">
        <field name="name">attendance.register.form.view</field>
        <field name="model">oe.attendance.register</field>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <form string="Attendance Register">
                <header>
                    <button name="button_draft" invisible="state != 'cancel'" string="Set to Draft" type="object" data-hotkey="n"/>
                    <button name="button_open" invisible="state != 'draft'" string="Open" type="object" class="oe_highlight" data-hotkey="o" />
                    <button name="button_cancel" invisible="state != 'draft'" string="Cancel" type="object" data-hotkey="x" />
                    <button name="button_close" type="object" string="Close Register" invisible="state != 'progress'" data-hotkey="l"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,progress,close" readonly="1"/>
                </header>
                <sheet>
                    <field name="active" invisible="1"/>
                    <field name="company_id" invisible="1"/>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="e.g. Fall 2023"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="school_year_id" options="{'no_create': True}"/>
                            <label for="date_start" string="Dates"/>
                            <div name="dates" class="o_row">
                                <field name="date_start" />
                                <i class="fa fa-long-arrow-right mx-2 oe_edit_only" aria-label="Arrow icon" title="Arrow"/>
                                <field name="date_end" />
                            </div>
                            <field name="course_id" options="{'no_create_edit': True}" required="1"/>
                        </group>
                        <group>
                            <field name="company_id" options="{'no_create': True}" groups="base.group_multi_company"/>
                        </group>
                    </group>
                    <separator string="Description"/>
                    <field name="description" type="html" options="{'collaborative': true, 'resizable': false}" placeholder="Attendance Register Details..."/>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_attendance_register" model="ir.actions.act_window">
        <field name="name">Attendance Register</field>
        <field name="res_model">oe.attendance.register</field>
        <field name="view_id" ref="attendance_register_tree_view"/>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Set a new stage in your admission pipeline
          </p><p>
            Stages allow admission persons to easily track how a specific application
            is positioned in the admission cycle.
          </p>
        </field>
    </record>
    
    <menuitem
        id="attendance_menu_config_attendance_register"
        name="Register"
        parent="menu_student_attendance_config_main"
        action="action_attendance_register"
        sequence="10"
    />

    
    
</odoo>
