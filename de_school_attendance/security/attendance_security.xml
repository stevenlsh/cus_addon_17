<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.module.category" id="module_category_student_attendances">
        <field name="name">Student Attendance</field>
        <field name="description">Helps you handle student attendance.</field>        
        <field name="sequence">14</field>
    </record>

    <record id="group_student_attendance_kiosk" model="res.groups">
        <field name="name">User : Only kiosk mode</field>
        <field name="category_id" ref="module_category_student_attendances"/>
        <field name="comment">The user will be able to open the kiosk mode and validate the student PIN.</field>
        <field name="implied_ids" eval="[(6, 0, [ref('base.group_user')])]"/>
    </record>

    <!-- assign student -->
    <!--
    <record id="hr.group_hr_user" model="res.groups">
        <field name="implied_ids" eval="[(4, ref('hr_attendance.group_hr_attendance_kiosk'))]"/>
    </record>
    -->
    
    <record id="group_student_attendance" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="module_category_student_attendances"/>
        <field name="comment">The user will gain access to the students attendance menu, enabling him to manage his own attendance.</field>
    </record>

    <record id="group_student_attendance_user" model="res.groups">
        <field name="name">Officer : Manage all attendances</field>
        <field name="category_id" ref="module_category_student_attendances"/>
        <field name="implied_ids" eval="[(4, ref('hr.group_hr_user')), (4, ref('de_school_attendance.group_student_attendance'))]"/>
    </record>

    <record id="group_student_attendance_manager" model="res.groups">
        <field name="name">Administrator</field>
        <field name="category_id" ref="module_category_student_attendances"/>
        <field name="implied_ids" eval="[(4, ref('de_school_attendance.group_student_attendance_user'))]"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>

    <record id="base.default_user" model="res.users">
        <field name="groups_id" eval="[(4,ref('de_school_attendance.group_student_attendance_manager'))]"/>
    </record>

    <record id="group_student_attendance_use_pin" model="res.groups">
        <field name="name">Enable Student PIN use</field>
        <field name="category_id" ref="base.module_category_hidden"/>
        <field name="comment">The user will have to enter his PIN to check in and out manually at the company screen.</field>
    </record>

    <data noupdate="1">

        <record id="student_attendance_rule_student_company" model="ir.rule">
            <field name="name">Student multi company rule</field>
            <field name="model_id" ref="model_oe_student_attendance"/>
            <field name="global" eval="True"/>
            <field name="domain_force">['|',('student_id.company_id','=',False),('student_id.company_id', 'in', company_ids)]</field>
        </record>

        <record id="student_attendance_rule_attendance_manager" model="ir.rule">
            <field name="name">attendance officer: full access</field>
            <field name="model_id" ref="model_oe_student_attendance"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(4,ref('de_school_attendance.group_student_attendance_user'))]"/>
        </record>

        <record id="student_attendance_rule_attendance_manual" model="ir.rule">
            <field name="name">Manual Attendance: own attendances</field>
            <field name="model_id" ref="model_oe_student_attendance"/>
            <field name="domain_force">[('student_id.user_id', '=', user.id)]</field>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_create" eval="1"/>
            <field name="perm_unlink" eval="0"/>
            <field name="groups" eval="[(4,ref('de_school_attendance.group_student_attendance'))]"/>
        </record>

        <record id="student_attendance_rule_attendance_student" model="ir.rule">
            <field name="name">user: read own attendance only</field>
            <field name="model_id" ref="model_oe_student_attendance"/>
            <field name="domain_force">[('student_id.user_id','=',user.id)]</field>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="0"/>
            <field name="perm_create" eval="0"/>
            <field name="perm_unlink" eval="0"/>
            <field name="groups" eval="[(4,ref('base.group_user'))]"/>
        </record>

        <!-- Groups for different Attendance -->
        <record id="group_student_attendance_use_day" model="res.groups">
            <field name="name">Show Day Attendance</field>
            <field name="category_id" ref="base.module_category_hidden"/>
        </record>
        <record id="group_student_attendance_use_period" model="res.groups">
            <field name="name">Show Period Attendance</field>
            <field name="category_id" ref="base.module_category_hidden"/>
        </record>
        <!-- Group for Atendance time -->
         <record id="group_student_attendance_use_time" model="res.groups">
            <field name="name">Show Attendance Time</field>
            <field name="category_id" ref="base.module_category_hidden"/>
        </record>
        
        <!-- Report -->
        <!--
        <record id="hr_attendance_report_rule_multi_company" model="ir.rule">
            <field name="name">Attendance report multi company rule</field>
            <field name="model_id" ref="model_hr_attendance_report"/>
            <field name="domain_force">[('company_id', 'in', company_ids)]</field>
        </record>
        -->
    </data>
</odoo>
