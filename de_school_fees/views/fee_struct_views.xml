<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Fee structure -->
    <record id="fee_structure_list_view" model="ir.ui.view">
        <field name="name">fee.structure.tree</field>
        <field name="model">oe.fee.struct</field>
        <field name="arch" type="xml">
            <tree string="Fee Structure">
                <field name="name"/>
                <field name="rule_ids"/>
                <field name="company_id" options="{'no_create': True}"
                    groups="base.group_multi_company"
                />
            </tree>
        </field>
    </record>

    <record id="fee_structure_view_kanban" model="ir.ui.view">
        <field name="name">fee.structure.kanban</field>
        <field name="model">oe.fee.struct</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_content oe_kanban_global_click">
                            <div class="row">
                                <div class="col-12">
                                    <strong><field name="name"/></strong>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="fee_structure_filter" model="ir.ui.view">
        <field name="name">fee.structure.select</field>
        <field name="model">oe.fee.struct</field>
        <field name="arch" type="xml">
            <search string="Fee Structures">
                <field name="name" string="Structure Name"/>
                <filter name="archived" string="Archived" domain="[('active', '=', False)]"/>
                
            </search>
        </field>
    </record>

    <record id="fee_structure_form_view" model="ir.ui.view">
        <field name="name">fee.structure.form.view</field>
        <field name="model">oe.fee.struct</field>
        <field name="arch" type="xml">
            <form string="Fee Structure">
            <sheet>
                <widget name="web_ribbon" title="Archived" bg_color="bg-danger" invisible="active == True"/>
                <div class="oe_title">
                    <label for="name" string="Structure Name"/>
                    <h1><field name="name" placeholder="e.g. Regular Feeslip"/></h1>
                </div>
                <group>
                    <group>
                        <field name="course_id" options="{'no_create': True, 'no_open': True}"/>
                        <field name="batch_ids" widget="many2many_tags" options="{'no_create': True, 'no_open': True}"/>
                        <field name="company_id" 
                            options="{'no_create': True, 'no_open': True}"
                            groups="base.group_multi_company"
                        />
                        
                        <field name="journal_id" options="{'no_create': True, 'no_open': True}"/>
                    </group>
                    <group name="fee_details">
                        <field name="active" invisible="1"/>
                        <field name="id" invisible="1"/>
                        <div class="o_td_label" invisible="pay_one_time == True">
                            <label for="schedule_pay_duration" string="Schedule Pay" />
                        </div>
                        <div name="schedule_pay_duration" invisible="pay_one_time == True">
                            <span class="ml8">Every </span>
                            <field name="schedule_pay_duration" nolabel="1" style="width: 8rem;" />
                            <span class="ml8"> Month(s)</span>
                        </div>
                        <field name="pay_one_time" />
                        <field name="use_enrol_contract_lines"/>
                        
                    </group>
                </group>
                <notebook colspan="4">
                     <page name="fee_rules" string="Particulars">
                       <field name="rule_ids" readonly="id == False">
                         <tree>
                            <field name="sequence" widget="handle"/>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="category_id"/>
                             <field name="quantity"/>
                             <field name="amount_fix" />
                             <field name="amount_total" sum="Amount"/>                            
                         </tree>
                      </field>
                     </page>
                     <page name="other_fee_type" string="Other Fee Type">
                       <field name="input_line_type_ids">
                         <tree>
                            <field name="name"/>
                            <field name="code"/>
                         </tree>
                      </field>
                     </page>
                </notebook>
            </sheet>
            </form>
        </field>
    </record>

    <record id="action_fee_structure" model="ir.actions.act_window">
        <field name="name">Fee Structures</field>
        <field name="res_model">oe.fee.struct</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
            Add a new fee structure
            </p>
        </field>
    </record>
    
    <menuitem
        id="menu_school_fees_menu_config_fee_structure"
        name="Fee Structure"
        parent="menu_school_fees_menu_config"
        action="action_fee_structure"
        sequence="3"/>
    
</odoo>