<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="action_report_feeslip" model="ir.actions.report">
            <field name="name">Feeslip</field>
            <field name="model">oe.feeslip</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">de_school_fees.report_feeslip_lang</field>
            <field name="report_file">de_school_fees.report_feeslip_lang</field>
            <field name="print_report_name">'Feeslip - %s' % (object.name)</field>
            <field name="binding_model_id" ref="model_oe_feeslip"/>
            <field name="binding_type">report</field>
            <!-- Erase fields to avoid double PDF posting -->
            <field name="attachment"></field>
            <field name="attachment_use" eval="False"/>
        </record>
        <record id="action_report_register" model="ir.actions.report">
            <field name="name">Contribution Registers</field>
            <field name="model">oe.feeslip.line</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">de_school_fees.contribution_register</field>
            <field name="report_file">de_school_fees.contribution_register</field>
            <field name="binding_model_id" ref="model_oe_feeslip_line"/>
            <field name="binding_type">report</field>
        </record>
</odoo>
