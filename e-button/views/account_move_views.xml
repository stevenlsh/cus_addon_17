<!-- This file is located in your_module/views/account_move_views.xml -->
<odoo>
    <record id="view_move_form_custom" model="ir.ui.view">
        <field name="name">account.move.form.custom</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="validate_e_invoice" string="Validate E-Invoice" type="object"
                        class="oe_highlight" groups="account.group_account_invoice"/>
            </xpath>
        </field>
    </record>
</odoo>
